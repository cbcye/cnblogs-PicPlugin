{
  "name": "Cnblogs Remote Image Uploader",
  "description": "将编辑器中的外链图片自动上传到博客园中，支持Markdown和TinyMCE编辑器",
  "version": "0.2",
  "minimum_chrome_version": "16.0.884",
  "permissions": ["downloads", "<all_urls>","tabs","webRequest", "webRequestBlocking"],
  "manifest_version": 2,
  "background": { "scripts": ["background.js"] },
    "page_action": {
        "default_icon": {
            "19": "icon128_2.png",
            "38": "icon128_2.png"
        },
        "default_title": "Cnblogs Remote Image Uploader"
    },
    "content_scripts": [
        {
            "matches": [ "https://i.cnblogs.com/EditPosts.aspx*" ],
            "js": ["jquery-2.0.0.min.js", "content_script.js" ]
        }
    ],
    "web_accessible_resources": [
       "sync.png"
     ]
}
